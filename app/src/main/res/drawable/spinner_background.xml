<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:state_focused="true" android:state_window_focused="true">
                <shape>
                    <stroke android:color="@color/colorAccent" android:width="@dimen/stroke_width" />
                    <corners android:radius="@dimen/radius" />
                </shape>
            </item>
            <item android:state_focused="false" android:state_window_focused="false">
                <shape>
                    <solid android:color="@color/LightGrey" />
                    <stroke android:width="@dimen/stroke_width" android:color="@color/LightGrey" />
                    <corners android:radius="@dimen/radius" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_arrow_drop_down_black_24dp" android:gravity="center_vertical|right" />
        </layer-list>
    </item>
</selector>